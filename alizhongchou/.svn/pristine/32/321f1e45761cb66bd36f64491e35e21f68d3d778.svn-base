body{
	color: #353535;
	background: #f0f0f2;
	font-family: "Microsoft YaHei","Segoe UI", "Lucida Grande", Helvetica, Arial,sans-serif;
	font-size: 16px;
	position: relative;
}
.btn{
	outline: none!important;
	font-size: 14px;
	text-transform:none;
}
.standard-body .full-width .container {
    max-width: 1270px;
    margin: 0px auto;
    padding-left: 50px;
    padding-right: 50px;
}
@media (min-width: 768px){
	.container {
	    width: 100%;
	    padding-left: 0px!important;
	    padding-right: 0px!important;
	}
}
@media (min-width: 768px){
	.container {
	    width: 750px;
	}
}
@media (min-width: 992px){
	.container {
    	width: 970px;
	}
}
@media (min-width: 1200px){
	.container {
	    width: 1170px;
	}
}

.l{
	float: left;
}
.r{
	float: right;
}
.order_all .order-first {
    padding-top: 0!important;
}
.order_all .order {
    padding: 30px 0;
    margin: 0;
    font-size: 16px;
}
.order_all .btn {
    height: 35px;
    margin: 0;
    margin-top: 30px;
    border-radius: 0;
    border: 1px solid #999;
}
.upper {
    text-transform: uppercase;
}
.product_content_all {
    background: #fff;
    display: table;
    padding: 0px 120px;
}
.product_content_all .product_table {
    display: table;
}
.product_content_all .product_content {
    padding: 0;
}
.product_content_all .product_content .product_content_cont {
    padding: 50px 30px;
    text-align: center;
}
.product_more {
    display: table;
    padding-bottom: 20px;
}
.more_btn .btn {
    border: 1px solid #999999!important;
    border-radius: 0;
}
.product_content_all .product_content .left {
    text-align: left;
    line-height: 23px;
}
.text-center a img {
    width: 100px;
    height: 60px;
}
.cart-info{
    background: #fff;
    padding: 50px 50px 10px 50px;
    margin-bottom: 20px;
}
.tbody{
    background: #f2f2f2;
}
.cart-info table{
    font-size: 16px;
}
.cart-info table td{
    border:none;
    padding: 20px 15px;
   
}
.table thead td{
    padding-bottom: 10px!important;
}
.text-right .btn{
    display: block;
    width: 100px;
    height: 35px;
    border-radius: 3px;
    border:none;
    text-transform: none;
} 
.text-right .btn:hover{
    background: #26cada;
}
.text-right .btn:last-child{
    margin-top: 20px;
    text-transform: none;
}
.total-p{
    text-align: right;
    padding-right: 20px;
    margin-top: 15px;
}
.total-p span{
    color:#f71414;
    font-weight: bold;
}
.cart-info table {
    margin-bottom: 30px;
}
@media(max-width: 1200px){
	.product_content_all{
		padding:0px 50px;
	}
}
@media (max-width: 1050px){
    .table td.text-right{
        text-align: left;
        padding-left: 0;
        padding-right: 15px!important;
    }

}
