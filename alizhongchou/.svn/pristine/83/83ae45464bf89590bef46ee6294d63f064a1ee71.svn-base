body {
    background: #f5f5f5;
    font-family: "Microsoft YaHei","Segoe UI", "Lucida Grande", Helvetica, Arial,sans-serif;
    font-size: 14px;
    color:#353535;
    margin: 0;
    padding: 0;
}
@media (max-width: 992px){
    .container {
        width: 100%;
        padding-left: 0px!important;
        padding-right: 0px!important;
    }

}
.container {
    max-width: 1270px;
    margin: 0px auto;
    padding-left: 50px;
    padding-right: 50px;
}
@media (max-width: 1270px) and (min-width: 1160px){
    .container {
        width: 1160px;
    }
}
img{
    display: block;
    width: 100%;
    height: 100%;
}
.l{
    float: left;
}
.r{
    float: right;
}
.btn{
    outline: none!important;
}

.paysuccess{
    background: #fff;
    margin-bottom: 30px;
    padding:50px;
}
.paysuccess h3{
    font-size: 20px;
    color:#26cada;
    margin-top:0;
    margin-bottom: 20px;
    font-weight: bold;
}
.paysuccess p{
    font-size: 16px;
}
.paysuccess h3 i{
    font-size: 30px;
    margin-right: 10px;
}
.p_miaoshu{
    width: 65%;
    margin-bottom: 20px;
}
.paysuccess .btn{
    border:none;
    border-radius: 0;
    font-size: 16px;
    text-transform: none;
}
.paysuccess .paybtn1{
    background: #26cada;
    color: #fff;
    margin-right: 20px;
}
.paysuccess .paybtn2{
    background: #fff;
    color: #101010;
}
@media (max-width: 768px){
    .paysuccess{
       padding:35px;
    }
    
}
.bottoms{
    position: relative;
}
.bottoms .swiper-container {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
}
.bottoms .swiper-slide {
    text-align: center;
    font-size: 18px;

}
.bottoms  .product-grid{
    margin-left: -15px;
    margin-right: -15px;
}
.swiper-button-next,.swiper-button-prev{
    background: none;
    width: auto;
    height: auto;
    top:40%;
    color: #c5c5c5;
}
.swiper-button-next:hover,.swiper-button-prev:hover{
    color:#26cada;
}
.swiper-button-prev{
    left:-15%;
}
.swiper-button-next{
    right:-15%;
}
.swiper-button-next i,.swiper-button-prev i{
    font-size: 150px;
   
}
/*  */
.InDemand-top{
    margin-bottom: 20px;
}
.InDemand-top span{
    float: left;
    font-size: 20px;
    color: #424242;
    font-weight: bold;
}
.product-grid .product{
    padding-top: 0;
}
.InDemand-top a{
    float: right;
    font-size: 16px;
    color: #26cada;
    line-height: 40px;
    font-weight: bold;
}
.product-grid .product .image img.zoom-image-effect {
    transform:none;
   
}

.product-grid .product:hover .image img.zoom-image-effect {
   transform:none;
}
.product-grid{
    margin-top: 0;
   
}
.product .right{
    padding:0 10px 10px 10px;
}
.product-grid .product .name a{
    line-height: 22px;
    font-weight: bold;
}
.product-grid .product .name{
    height: auto;
    line-height: 22px;
    margin-bottom: 10px;
}

.product-grid .product{
    background: #fff;
    text-align: left;
   
}
.product-grid .product .name{
    margin-top: 10px;
    text-align: left;
}
.nduanluo{
    color: #757575;
    line-height: 18px;
    letter-spacing: 0;
    font-size: 13px;
    margin-bottom: 20px;
    max-height: 55px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    word-wrap: break-word;

}
/* jidutiao */
.product-grid .product .progress{
    height: 10px;
    margin-bottom: 30px;
    border-radius: 20px;
    background-color: #e8e8e8;
    overflow: visible;
}
.product-grid .product .progress .progress-bar{
    background: #26c6da; 
    position: relative;
    animation: animate-positive 2s;
    border-radius: 20px;
    box-shadow: none;
}
.progress .progress-value{
    display: block;
    font-size: 13px;
    color: #101010;
    position: absolute;
    bottom: -25px;
    right: -15px;
}
.pledge p {
    font-weight: bold;
    font-size: 13px;
}
@-webkit-keyframes animate-positive{
    0% { width: 0%; }
}
@keyframes animate-positive{
    0% { width: 0%; }
}
/*  */
@media (max-width: 992px){
    .swiper-button-prev{
        left:0;
    }
    .swiper-button-next{
        right:0;
    }
    
}
@media (min-width: 992px) and (max-width: 1400px){
    .swiper-button-prev{
        left:0;
    }
    .swiper-button-next{
        right:0;
    }
    
}
